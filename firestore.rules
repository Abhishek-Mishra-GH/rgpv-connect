
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read all profiles, but only write to their own.
    match /users/{userId} {
      allow read;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read questions, but only authenticated users can create them.
    // Only the author can update or delete their question.
    match /questions/{questionId} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.author.id == request.auth.uid;
    }
  }
}
