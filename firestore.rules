rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check vote increments
    function isVote() {
      return abs(request.resource.data.upvotes - resource.data.upvotes) == 1;
    }
  
    match /users/{userId} {
      // Allow anyone to read user profiles
      allow read: if true;
      
      // Allow authenticated users to create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /questions/{questionId} {
      // Allow anyone to read questions
      allow read: if true;
      
      // Allow authenticated users to create questions
      allow create: if request.auth != null;

      // Allow authenticated users to update upvotes, or the author to edit other fields
      allow update: if request.auth != null && (isVote() || request.auth.uid == resource.data.author.id);
    }
    
    match /answers/{answerId} {
      // Allow anyone to read answers
      allow read: if true;

      // Allow authenticated users to create answers
      allow create: if request.auth != null;

      // Allow authenticated users to update upvotes
      allow update: if request.auth != null && isVote();
    }
  }
}