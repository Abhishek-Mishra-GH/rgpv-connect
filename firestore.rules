rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS
    // Users can read any profile (for seniors page, author details)
    // Users can only create and update their own profile
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // QUESTIONS
    // Anyone can read questions
    // Authenticated users can create questions
    // Users can only update their own questions (TBD for upvotes etc.)
    match /questions/{questionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null; // Simplified for now
    }

    // ANSWERS
    // Anyone can read answers
    // Authenticated users can create answers
    // Users can update their own answers (TBD for upvotes)
     match /answers/{answerId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null; // Simplified for now
    }
  }
}
